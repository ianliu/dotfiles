[module/title]
type = internal/xwindow
format = <label>
label = %title:0:50:...%

[module/player-mpris-simple]
type = custom/script
exec = ~/bin/player-mpris-simple.sh
interval = 3
click-left = playerctl previous
click-right = playerctl next
click-middle = playerctl play-pause

